{
  "name": "get-installed-path",
  "version": "0.0.0-semantic-release",
  "description": "Get installation path where the given package is installed. Works for globally and locally installed packages",
  "repository": "tunnckoCore/get-installed-path",
  "homepage": "https://github.com/tunnckoCore/get-installed-path",
  "author": "Charlike Mike Reagent <@tunnckoCore> (https://i.am.charlike.online)",
  "nspId": "changeme",
  "module": "changeme",
  "main": "./index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint *.js --format codeframe --fix",
    "pretest": "npm run lint",
    "test": "npm run coverage",
    "posttest": "npm run lint:coverage",
    "coverage": "nyc --reporter lcov node test.js && nyc report",
    "lint:coverage": "nyc check-coverage",
    "prerelease": "npm test",
    "release": "standard-version --sign --no-verify",
    "precommit": "git add --all",
    "commit": "git-cz"
  },
  "engines": {
    "node": ">=4",
    "npm": ">=5"
  },
  "files": [
    "index.js"
  ],
  "dependencies": {
    "global-modules": "1.0.0"
  },
  "devDependencies": {
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "eslint": "4.5.0",
    "eslint-config-standard-tunnckocore": "1.0.7",
    "mkdirp": "^0.5.1",
    "mukla": "0.4.9",
    "nyc": "10.0.0",
    "pkg-dir": "2.0.0",
    "pre-commit": "1.2.2",
    "rimraf": "2.6.1",
    "standard-version": "4.2.0"
  },
  "keywords": [
    "filepath",
    "get",
    "global",
    "globally",
    "install",
    "installed",
    "local",
    "locally",
    "npm",
    "package",
    "path",
    "pkg",
    "resolve"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "always-done",
        "minibase",
        "try-catch-core",
        "detect-installed",
        "is-installed",
        "global-modules",
        "global-prefix",
        "global-paths"
      ],
      "highlight": "detect-installed"
    },
    "lint": {
      "reflinks": true
    }
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
